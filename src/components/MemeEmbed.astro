---
export interface Props {
    src: string;
    alt: string;
    caption?: string;
    width?: number;
    height?: number;
    lazy?: boolean;
}

const {
    src,
    alt,
    caption,
    width,
    height,
    lazy = true
} = Astro.props;
---

<figure class="my-8">
    <div class="relative overflow-hidden rounded-lg bg-base-200">
        <img
                src={src}
                alt={alt}
                width={width}
                height={height}
                loading={lazy ? "lazy" : "eager"}
                class="w-full h-auto transition-transform hover:scale-105 duration-300"
                onError="this.parentElement.innerHTML='<div class=\'flex items-center justify-center h-48 text-base-content/50\'>üñºÔ∏è –ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –Ω–µ–¥–æ—Å—Ç—É–ø–Ω–æ</div>'"
        />

        <!-- Overlay for better text readability if needed -->
        <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 hover:opacity-100 transition-opacity duration-300"></div>
    </div>

    {caption && (
            <figcaption class="mt-3 text-center text-sm text-base-content/70 italic">
                {caption}
            </figcaption>
    )}
</figure>

<style>
    figure {
        margin-left: auto;
        margin-right: auto;
    }

    @media (max-width: 640px) {
        figure {
            margin-left: -1rem;
            margin-right: -1rem;
        }

        figure img {
            border-radius: 0;
        }
    }
</style>